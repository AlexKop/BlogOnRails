<h1>Listing posts</h1>
<%= link_to 'New post', :action => :new %> 
 <table>
 <tr>
 <th>Title</th>
 <th>Text</th>
 </tr>
              
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', :action => :show, :id => post.id %></td>
    <td><%= link_to 'Edit', :action => :edit, :id => post.id %></td>
  </tr>
  <% end %>
</table>